<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="logo">@android:color/transparent</item>

        <item name="actionOverflowMenuStyle">@style/MyActionOverflowMenuStyle</item>

        <item name="android:textViewStyle">@style/MyTextViewStyle</item>

        <item name="buttonStyle">@style/MyButtonStyle</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
        <item name="spinnerStyle">@style/MySpinnerStyle</item>

        <item name="alertDialogTheme">@style/MyAlertDialogTheme</item>
        <item name="android:alertDialogTheme">@style/MyAlertDialogTheme</item>
        <item name="dialogTheme">@style/MyDialogTheme</item>
        <item name="android:dialogTheme">@style/MyDialogTheme</item>

        <!-- http://scriptedpapers.com/2015/02/12/android-action-bar-and-overflow-menu-customization-with-theme-appcompat/ -->
        <item name="dropDownListViewStyle">@style/MyDropDownListViewStyle</item>

        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/theme_darker</item>
        <item name="colorAccent">@color/theme</item>


        <!-- http://stackoverflow.com/questions/28738089/change-datepicker-dialog-color-for-android-5-0 -->

    </style>

    <style name="MyActionOverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:textSize">16sp</item>

    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/theme</item>
        <item name="android:textColorPrimary">@color/textview</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme</item>
        <item name="android:textColorPrimary">@color/textview</item>
    </style>

    <style name="MyDropDownListViewStyle" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:background">#fafafa</item>
    </style>


    <style name="MySpinnerStyle" parent="@android:style/Widget.Holo.Spinner">
        <item name="background">@android:drawable/spinner_background</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="MyDrawerArrowStyle" parent="style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>

    </style>

    <style name="MyButtonStyle" parent="@android:style/Widget.Holo.Button">
        <item name="android:textColor">@color/theme</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>


    </style>


    <style name="NoShadow" parent="style/AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Material" parent="style/Widget.AppCompat.EditText">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:editTextBackground">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/white</item>

        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Toolbar.MenuText" parent="TextAppearance.Widget.AppCompat.ExpandedMenu.Item">
        <item name="android:textSize">16sp</item>

    </style>


    <style name="MyTextViewStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/textview</item>

    </style>


    <style name="Widget"></style>

    <style name="Widget.ProgressBar"></style>

    <style name="Widget.ProgressBar.Vertical">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/vertical_progressbar</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minWidth">1dip</item>
        <item name="android:maxWidth">12dip</item>
    </style>
</resources>
