<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trans_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/budget_title_dialog"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/create_budget_dialog"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/budgetNameBox"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="58dp"
        android:inputType="textCapSentences"
        android:editable="true"
        android:focusable="true"
        android:hint="Name"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/budgetAmountBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_alignLeft="@id/budgetNameBox"
        android:hint="Amount"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:textSize="20sp" />

    <Button
        android:id="@+id/budget_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:background="@null"
        android:textStyle="bold"
        android:textColor="#00C8C8"
        android:fontFamily="sans-serif-light"
        android:text="Save"
        />


    <Button
        android:id="@+id/budget_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/budget_save_button"
        android:layout_marginRight="25dp"
        android:layout_alignBottom="@+id/budget_save_button"
        android:background="@null"
        android:textStyle="bold"
        android:textColor="#00C8C8"
        android:fontFamily="sans-serif-light"
        android:text="Cancel"/>


</RelativeLayout>