<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pin_title_dialog"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_pin_dialog"
        android:layout_marginLeft="30dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pinEditBox2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="58dp"
        android:inputType="numberPassword"
        android:editable="true"
        android:focusable="true"
        android:maxLength="4"
        android:textSize="20sp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/pinEditBox1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:inputType="numberPassword"
        android:editable="true"
        android:focusable="true"
        android:maxLength="4"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/pinMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pinEditBox1"
        android:layout_marginTop="2dp"
        android:layout_alignLeft="@id/pinEditBox1"
        android:text="@string/pin_message_dialog"
        android:textColor="@color/red_money"/>

    <include layout="@layout/dialog_buttons"/>

</RelativeLayout>