<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    >

    <FrameLayout
        android:id="@+id/date_chip_frame"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:background="@drawable/date_chip">

        <TextView
            android:id="@+id/expensive_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            tools:text="Wed 17" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/date_chip_frame">

        <TextView
            android:id="@+id/expensive_category_textview"
            android:layout_width="150dp"
            android:layout_height="17dp"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            tools:text="Alcohol" />

        <TextView
            android:id="@+id/expensive_desc_textview"
            android:layout_width="150dp"
            android:layout_height="17dp"
            android:layout_alignLeft="@id/expensive_category_textview"
            android:layout_below="@id/expensive_category_textview"
            android:textStyle="italic"
            tools:text="Hakkasan bottle service" />

    </RelativeLayout>

    <TextView
        android:id="@+id/expensive_amount_textview"
        android:layout_width="120dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:layout_marginRight="16dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="$250.00" />

</RelativeLayout>