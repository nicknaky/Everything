<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="?android:actionBarSize">

    <TextView
        android:id="@+id/pin_title_dialog"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_pin_dialog"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pinEditBox2"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:inputType="numberPassword"
        android:editable="true"
        android:focusable="true"
        android:maxLength="4"
        android:textSize="30sp"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/pinEditBox1"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:inputType="numberPassword"
        android:editable="true"
        android:focusable="true"
        android:maxLength="4"
        android:textSize="30sp"
        tools:text="1234"
        />

    <TextView
        android:id="@+id/pinMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pinEditBox1"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:text="@string/pin_message_dialog"
        android:textColor="@color/red_money"
        android:visibility="invisible"/>

</RelativeLayout>